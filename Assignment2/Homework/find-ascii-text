#! /bin/bash
# find-ascii-text --- accepts one or more arguments, and outputs a line for each argument that names an ASCII text file

for arg in "$@"
do
    if [ -d $arg ]
    then
	echo "DIRECTORY"
    elif [ -f $arg ]
    then
	let nonASCII=`awk '/[^\t\f -~]/' $arg | wc -m`
	if (($nonASCII==0))
	then
	    echo $arg
	fi
    else
	echo "DOES NOT EXIST"
    fi
done
